@import "../../../../../style/public/detail.wxss";
@import "../../../style/skin.wxss";

page {
	background-color: #fff !important;
}

.main {
	position: relative;
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: flex-start;
	background-color: #fff;
	min-height: 500rpx;
	border-top-left-radius: 60rpx;
	border-top-right-radius: 60rpx;
	padding: 30rpx 40rpx;
}

/*指示点*/
swiper .wx-swiper-dots .wx-swiper-dot {
	width: 15rpx;
	height: 10rpx;
	border-radius: 4rpx;
}

/*指示点区域*/
swiper .wx-swiper-dots {
	background: rgba(0, 0, 0, .25);
	border-radius: 50rpx;
	margin-bottom: 80rpx;
	padding: 20rpx 30rpx
}

/* 选中指示点的样式 */
swiper .wx-swiper-dot.wx-swiper-dot-active {
	width: 30rpx;
	height: 10rpx;
	border-radius: 4rpx;
}

.wx-swiper-dots.wx-swiper-dots-horizontal {
	margin-bottom: 110rpx;
}

.author {
	width: 100%;
	display: flex;
	align-items: center;
	padding: 10rpx 0;
}

.author .left {
	width: 55rpx;
	height: 55rpx;
	border-radius: 50%;
	margin-right: 15rpx;
}

.author .right {
	flex: 1;
	width: 100%;
	display: flex;
	flex-direction: column;
}

.author .right .line1 {
	font-size: 24rpx;
	padding: 0rpx 0;
	color: #999;
}

.title {
	width: 100%;
	font-size: 34rpx;
	font-weight: bold;
	padding: 10rpx 0;
	margin-top: 10rpx;
	text-align: left;
}

.title-desc {
	width: 100%;
	font-size: 24rpx; 
	padding: 10rpx 0;
	margin-top: 10rpx;
	text-align: left;
}

.detail-title {
	width: 100%;
	font-size: 30rpx;
	font-weight: bold;
	padding: 0rpx 0rpx;
	margin-top: 40rpx;
	margin-bottom: 10rpx;
	display: flex;
	align-items: center;
}

.detail-title .icon-left {
	width: 14rpx;
	height: 36rpx;
	background-image: linear-gradient(145deg, var(--projectCompareColor), #faa5a6, var(--projectCompareColor));
	margin-right: 14rpx;
	border-radius: 10rpx;
}

.detail {
	width: 100%;
	background-color: #fff;
	padding: 0rpx 0rpx 0;
	overflow: hidden;
	transform: translateY(0);
	display: flex;
	flex-direction: column;
}


.detail .desc {
	font-size: 28rpx;
	color: #666;
	line-height: 1.8;
	display: flex;
}

.detail .rule {
	font-size: 24rpx;
	color: #999;
	padding: 12rpx 0;
	border-bottom: 2rpx dashed #ddd;
}

.detail .rule:last-child {
	border-bottom: 0;
}


.map {
	font-size: 28rpx;
	color: #666;
	line-height: 1.8;
	width: 100%;
	display: flex;
	justify-content: space-between;
	align-items: baseline;
	margin-top: 10rpx;
}

.article-box .article {
	padding: 0rpx 0rpx;
}

.article-box .article .content {
	color: #444;
	font-size: 26rpx;
	text-align: justify;
	line-height: 1.6;
}

/*底部*/
.bottom-line {
	height: 140rpx;
	background-color: #fff;
	border-radius: 60rpx;
	display: flex;
	align-content: space-between;
	align-items: center;
	padding: 0 20rpx;
}

.bottom-line .join {
	padding: 20rpx 30rpx;
	background-color: var(--projectCompareColor);
	width: 200rpx;
	border-radius: 50rpx;
	color: #fff;
	text-align: center;
	font-size: 28rpx;
	border: 2rpx solid var(--projectCompareColor)
}

.bottom-line .join.bg-grey {
	border: 2rpx solid var(--greyLight)
}

.bottom-line .join.comment {
	background-color: #fff;
	color: var(--projectCompareColor);
}

.bottom-line .join.bg-grey {
	box-shadow: unset;
}

.cmpt-biz-detail-mode2 .inner .slot-inner {
	flex: 1;
	display: flex;
	justify-content: flex-end;
}

.cmpt-biz-detail-mode2 .inner {
	padding: 0 !important;
}