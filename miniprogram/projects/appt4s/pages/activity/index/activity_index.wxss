@import "../../../style/skin.wxss";

.list {
	width: 100%;
	padding: 0rpx 0rpx 20rpx;
	display: flex;
	flex-direction: column;
}

.list .item {
	width: 100%;
	display: flex;
	background-color: #fff;
	padding: 30rpx 20rpx;
	overflow: hidden;
	position: relative;
	border-bottom: 2rpx dotted #bbb;
}

.list .item:last-child {
	border-bottom: 0;
}

.list .item .left {
	margin-right: 25rpx;
	display: flex;
	align-items: flex-start;
	position: relative;
	overflow: hidden;
}


.list .item .left .mark {
	position: absolute;
	top: 0;
	left: 0rpx;
	font-size: 22rpx;
	z-index: 9;
	background-color: rgba(238, 36, 36, 0.8);
	color: #fff;
	padding: 4rpx 12rpx;
	border-bottom-right-radius: 10rpx;
}

.list .item .left image {
	width: 280rpx;
	height: 160rpx;
	border-radius: 10rpx;

}

.list .item .right {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}


.list .item .right .title {
	width: 100%;
	font-size: 28rpx;
	font-weight: bold;
	color: #333;
}

.list .item .right .status {
	width: 100%;
	padding: 6rpx 0;
}

.list .item .right .status>text {
	background-color: #f8f8f8;
	font-size: 22rpx;
	padding: 6rpx 20rpx;
	border-radius: 40rpx;
}

.list .item .right .desc {
	width: 100%;
	font-size: 24rpx;
	color: #999;
}

.top_bar {
	width: 100%;
	background-color: #fff !important;
}

.tabs {
	width: unset !important;
	background-color: #fff !important;
}

 
.bar.fixed,
.nav.fixed {
	box-shadow: unset !important;
}
